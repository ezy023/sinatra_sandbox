<div class="container">
  <h1>Welcome to Sinatra!</h1>
  <p>Rod's World(obviously)!</p>

  <form action='/cool_url' method='get'>
    <input type='text' name="car[title]" placeholder="Title"></input>
    <input type='text' name="car[price]" placeholder="Price"></input>

    <input type='submit'></input>
  </form>


  <form action='/button_cool_url' method='get'>
    <br>
    <input type="checkbox" name="option" value = "Milk"> Milk<br>
    <input type="checkbox" name="option1" value = "Butter"<br> Butter<br>
    <br>
    <input type="submit" />
  </form>

  <table>
    <tr>
      <th>File Description</th>
      <th>File Location</th>
    </tr>
    <tr>
      <td>This view file</td>
      <td><code><%= __FILE__.gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The layout file</td>
      <td><code><%= File.expand_path('../layout.erb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The current controller</td>
      <td><code><%= File.expand_path('../../controllers/index.rb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
  </table>
</div>
